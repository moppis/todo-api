{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
        "pathToQuery": {
            "matchCondition": {
                "methods": [ "PUT" ],
                "route": "/api/todo/{id}"
            },
            "backendUri": "https://%WEBSITE_HOSTNAME%/api/todo?id={id}"
        }
    }
}